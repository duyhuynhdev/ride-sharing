        <servlet-class>com.bikiegang.ridesharing.api.UpdateBroadcastAPI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBroadcastAPI</servlet-name>
        <url-pattern>/UpdateBroadcastAPI</url-pattern>
    </servlet-mapping>
    <servlet>
